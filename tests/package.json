{
  "name": "todo-app-playwright-tests",
  "version": "1.0.0",
  "type": "module",
  "description": "Testes end-to-end para a aplicação Todo List usando Playwright",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "report": "playwright show-report",
    "test:local:chromium": "playwright test --config=playwright.chromium.config.js",
    "test:local:multi": "playwright test --config=playwright.multi.config.js",
    "test:azure:chromium": "playwright test --config=playwright.azure.chromium.config.ts",
    "test:azure:multi": "playwright test --config=playwright.azure.multi.config.ts"
  },
  "devDependencies": {
    "@azure/identity": "^4.12.0",
    "@azure/playwright": "^1.0.0",
    "@playwright/test": "^1.53.0",
    "@types/node": "^24.6.1",
    "dotenv": "^16.3.1"
  },
  "keywords": [
    "playwright",
    "e2e",
    "testing",
    "todo",
    "dotnet"
  ],
  "author": "",
  "license": "MIT"
}
