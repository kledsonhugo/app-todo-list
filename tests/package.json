{
  "name": "todo-app-playwright-tests",
  "version": "1.0.0",
  "type": "module",
  "description": "Testes end-to-end para a aplicação Todo List usando Playwright",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:azure": "playwright test --config=playwright.service.config.ts",
    "test:azure:ui": "playwright test --config=playwright.service.config.ts --ui",
    "test:azure:headed": "playwright test --config=playwright.service.config.ts --headed",
    "test:local": "playwright test --config=playwright.config.js",
    "report": "playwright show-report",
    "report:azure": "playwright show-report playwright-report-azure"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@azure/playwright": "latest",
    "dotenv": "^16.3.1"
  },
  "keywords": [
    "playwright",
    "e2e",
    "testing",
    "todo",
    "dotnet"
  ],
  "author": "",
  "license": "MIT"
}